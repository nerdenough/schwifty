{
    "name": "schwifty",
    "displayName": "Schwifty",
    "description": "Swift extension for VS Code",
    "version": "0.0.1",
    "publisher": "nerdenough",
    "engines": {
        "vscode": "^1.22.0"
    },
    "categories": [
        "Languages",
        "Formatters",
        "Other"
    ],
    "activationEvents": [
        "onLanguage:swift"
    ],
    "main": "./out/extension",
    "contributes": {
        "languages": [{
            "id": "swift",
            "extensions": [".swift"]
        }],
        "configuration": {
            "type": "object",
            "title": "Schwifty Configuration",
            "properties": {
                "schwifty.sourceKittenPath": {
                    "type": "string",
                    "default": "sourcekitten",
                    "description": "The path to the SourceKitten binary."
                },
                "schwifty.formatOnSave": {
                    "type": "boolean",
                    "default": false,
                    "description": "Format your swift code automatically on save."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "tslint": "^5.8.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}
